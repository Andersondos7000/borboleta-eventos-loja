# ðŸ”§ N8N MCP Configuration
# Borboleta Eventos - Workflow Automation

# === BASIC CONFIGURATION ===
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production

# === TIMEZONE & LOCALE ===
GENERIC_TIMEZONE=America/Sao_Paulo
N8N_DEFAULT_LOCALE=pt-BR

# === WEBHOOK CONFIGURATION ===
WEBHOOK_URL=http://localhost:5678/
N8N_PAYLOAD_SIZE_MAX=16777216

# === MCP INTEGRATION ===
N8N_MCP_INTEGRATION=true
N8N_MCP_GATEWAY_URL=http://mcp-gateway:3000

# === MONITORING & DIAGNOSTICS ===
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=true
N8N_LOG_LEVEL=info

# === SECURITY ===
N8N_ENCRYPTION_KEY=BorboletaEvents2025SecureN8NKey123
N8N_USER_MANAGEMENT_DISABLED=false

# === EXTERNAL INTEGRATIONS ===
# GitHub
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_WEBHOOK_SECRET=borboleta_github_webhook_secret_2025

# Docker Hub
DOCKER_HUB_TOKEN=${DOCKER_HUB_TOKEN}
DOCKER_HUB_USERNAME=${DOCKER_HUB_USERNAME}

# Supabase
VITE_SUPABASE_URL=${VITE_SUPABASE_URL}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# === WORKFLOW SETTINGS ===
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336
N8N_WORKFLOW_CALLER_POLICY_DEFAULT_OPTION=workflowsFromSameOwner

# === EMAIL CONFIGURATION (for notifications) ===
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=noreply@borboletaeventos.com
N8N_SMTP_PASS=your_app_password_here
N8N_SMTP_SENDER=noreply@borboletaeventos.com

# === PERFORMANCE ===
N8N_CONCURRENCY_PRODUCTION=10
EXECUTIONS_PROCESS=main
N8N_PUSH_BACKEND=websocket
